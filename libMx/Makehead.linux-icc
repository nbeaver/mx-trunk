#
LLP_GPIB_INCLUDES  = -I/usr/local/include/gpib
LLP_GPIB_LIB_DIR   = -L/usr/local/lib
LLP_GPIB_LIBRARIES = -lgpib -lfl

#
NI_VISA_DIR       = /usr/local/vxipnp/linux
