I8255_INCLUDES  =

#
AM9513_INCLUDES =

#
LINUX_PORTIO_INCLUDES = -I/usr/local/include

#
LINUX_IOPL_FLAGS =

#
XIA_HANDEL_DIR       = /home/lavender/xia/handel
XIA_HANDEL_INCLUDES  = -I$(XIA_HANDEL_DIR) -DIS_MX_DRIVER
XIA_HANDEL_LIB_DIRS  = -L$(XIA_HANDEL_DIR)
